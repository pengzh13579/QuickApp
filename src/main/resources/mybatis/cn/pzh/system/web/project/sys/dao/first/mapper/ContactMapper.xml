<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.pzh.system.web.project.sys.dao.mapper.ContactMapper">

    <resultMap id="BaseResultMap" type="cn.pzh.system.web.project.common.dao.first.entity.SystemContactEntity" >
        <result column="ID" property="id" jdbcType="INTEGER" />
        <result column="USER_NAME" property="userName" jdbcType="VARCHAR" />
        <result column="CONTACT_TYPE" property="contactType" jdbcType="INTEGER" />
        <result column="CONTACT_INFO" property="contactInfo" jdbcType="VARCHAR" />
    </resultMap>

    <!--  -->
    <select id="getMenu" parameterType="map" resultMap="contactMap">
        SELECT
            SYS_CONTACT.ID,
            SYS_CONTACT.USER_NAME,
            SYS_CONTACT.CONTACT_TYPE,
            SYS_CONTACT.CONTACT_INFO
        FROM SYS_CONTACT SYS_CONTACT
        WHERE SYS_CONTACT.USER_NAME = #{userName,jdbcType=VARCHAR}
    </select>

    <!--  -->
    <insert id="saveContact" parameterType="cn.pzh.system.web.project.common.dao.first.entity.SystemContactEntity">
        insert into sys_contact (
            USER_NAME,
            CONTACT_TYPE,
            CONTACT_INFO)
        values (
            #{userName,jdbcType=VARCHAR},
            #{contactType,jdbcType=NUMERIC},
            #{contactInfo,jdbcType=VARCHAR}
        )
    </insert>
</mapper>
